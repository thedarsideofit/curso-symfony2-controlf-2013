{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Producto creation</h1>

    <form action="{{ path('producto_create') }}" method="post" {{ form_enctype(form) }}>
        {{ form_errors(form) }}
        
<div>
    
    {{ form_errors(form.nombre) }}
    {{ form_errors(form.precio) }}
    {{ form_label(form.nombre,'Nombre y Precio') }}
    {{ form_widget(form.nombre) }}        
    {{ form_widget(form.precio, { 'attr': {'style': 'width:30px;'} }) }}
</div>            
        {{ form_rest(form) }}
        <p>
            <button type="submit">Create</button>
        </p>
    </form>

        <ul class="record_actions">
    <li>
        <a href="{{ path('producto') }}">
            Back to the list
        </a>
    </li>
</ul>
{% endblock %}
